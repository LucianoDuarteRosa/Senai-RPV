<%- include('../header') %>

  <div class="container">
    <div class="row my-4">
      <div class="col-lg-12"></div>
      
      <form class="d-flex" action="/tarefa.search" method="POST">
        <input class="form-control me-2" type="text" name="search" placeholder="Pesquisa..." value="<%= search %>">
        <button class="btn btn-dark" type="submit" name="submit"> <i class="fas fa-search me-1"></i> </button>
      </form>

      <div class="table-responsive">
        <table id="tarefaList" class="table table-striped  text-center my-3">
          <thread>
            <tr class="table-dark">
              <th>ID</th>
              <th class="nometable">Nome</th>
              <th class="descricatable">Descrição</th>
              <th>Data de Início</th>
              <th>Data de Termino</th>
              <th>Finalizado</th>
              <th class = "icontable"> </th>
            </tr>
            <tbody>
              <% if ( tarefa !='' ) { tarefa.forEach((row, index)=> { %>
                <tr class="align-middle">
                  <td>
                    <%= row.ID %>
                  </td>
                  <td>
                    <%= row.Nome %>
                  </td>
                  <td>
                    <%= row.Descricao %>
                  </td>
                  <td>
                    <%= row.Data_Inicio.toLocaleDateString('pt-BR') %>
                  </td>
                  <td>
                    <% if (row.Data_Termino == "" || row.Data_Termino === null) { %>
                      ----
                    <% } else { %>
                      <%= row.Data_Termino.toLocaleDateString('pt-BR') %>
                    <% } %>
                  </td>
                  <td>
                    <% if (row.Finalizado === 1) { %>
                      <i class="fa-solid fa-check" style="color: #0aa708;"></i>
                    <% } else { %>
                      <i class="fa-solid fa-xmark" style="color: #f00505;"></i>
                    <% } %>
                  </td>
                  <td>
                    <a href="update/<%= row.ID %>" class="text-dark">
                      <i class="fas fa-edit fa-lg mx-1"></i></a>
                    <a href="delete/<%= row.ID %>" class="text-dark">
                      <i class="fas fa-trash-alt fa-lg mx-1"></i></a>
                  </td>
                </tr>
                <% }) } %>
            </tbody>
          </thread>
        </table>
        <% if ( tarefa=='' ) { %>
          <h1 class="text-center text-secondary mt-5">
            Nenhuma tarefa encontrada! :(
          </h1>
          <% } %>
      </div>
    </div>
  </div>
  <div class="div_btn">
    <div class= "button-Novo"><a class="nav-link" href="/tarefa/create">Nova Suporte</a>
    </div>
  </div>

<%- include('../footer') %>